            <Insets />
         </BorderPane.margin>

        </AnchorPane>
    </bottom>
   <top>
      <JFXDrawersStack fx:id="notificationDrawer" BorderPane.alignment="TOP_CENTER">
         <children>
            <JFXDrawer />
         </children>
      </JFXDrawersStack>
   </top>

</BorderPane>
