        <AnchorPane fx:id="commandBoxContainer" styleClass="container" BorderPane.alignment="BOTTOM_RIGHT">
            <JFXTextField fx:id="commandBox" alignment="CENTER" maxWidth="500.0" minWidth="100.0" onKeyPressed="#handleEnterKeyPressed" prefHeight="30.0" prefWidth="500.0" promptText="Enter command:" styleClass="text-box" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
